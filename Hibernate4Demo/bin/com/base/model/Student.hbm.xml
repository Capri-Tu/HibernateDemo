<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.base.model">

    <class name="Student" table="t_student">	<!-- 类名与对应的数据表名 -->
        <id name="id" column="stuId">			<!-- 字段名,设置主键 -->
            <generator class="native"/>
        </id>
        <property name="name"/>			<!--普通字段  -->
        
        <many-to-one name="c" column="classId" class="com.base.model.Class" cascade="save-update"></many-to-one>
        			<!-- cascade="save-update": 级联更新 -->
    </class>

</hibernate-mapping>